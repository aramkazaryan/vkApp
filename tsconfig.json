{
  "compilerOptions": {
    "noEmit": true,
    "target": "es2015",
    "module": "commonjs",
    "lib": ["dom", "es2015"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "types": ["node", "jest", "@testing-library/jest-dom"]
  },
  "include": ["src", "src/@types"],
  "exclude": ["node_modules"]
}
